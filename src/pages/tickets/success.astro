---
import Layout from '../../layouts/Layout.astro';
import { siteConfig } from '../../config/site';

// Get session_id from URL parameters
const { url } = Astro;
const sessionId = url.searchParams.get('session_id');
---

<Layout title="Purchase Successful - Thank You!">
    <div class="min-h-screen bg-gray-50 pt-20">
        <div class="container mx-auto px-6 py-16">
            <div class="max-w-2xl mx-auto">
                {/* Simple Success Card */}
                <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8 text-center">
                    {/* Success Icon */}
                    <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                    </div>

                    {/* Main Message */}
                    <h1 class="text-3xl font-bold text-gray-900 mb-4">Thank You!</h1>
                    <p class="text-lg text-gray-600 mb-8">
                        Your purchase was successful. We appreciate your support!
                    </p>

                    {/* Confirmation Details */}
                    <div class="bg-gray-50 rounded-xl p-6 mb-8 text-left">
                        <div class="space-y-4">
                            <div class="flex items-start gap-3">
                                <svg class="w-5 h-5 text-green-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                                <div>
                                    <p class="font-medium text-gray-900">Payment Confirmation</p>
                                    <p class="text-sm text-gray-600">You'll receive an email confirmation shortly</p>
                                </div>
                            </div>
                            
                            <div class="flex items-start gap-3">
                                <svg class="w-5 h-5 text-blue-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
                                </svg>
                                <div>
                                    <p class="font-medium text-gray-900">Ticket Pickup</p>
                                    <p class="text-sm text-gray-600">Get your tickets at the event check-in table</p>
                                </div>
                            </div>

                            <div class="flex items-start gap-3">
                                <svg class="w-5 h-5 text-purple-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                </svg>
                                <div>
                                    <p class="font-medium text-gray-900">Event Details</p>
                                    <p class="text-sm text-gray-600">Saturday, November 1, 2025 â€¢ 5:00 PM - 8:00 PM</p>
                                    <p class="text-sm text-gray-600">Memory Lane Events, Eldon, MO</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    {/* Transaction ID */}
                    {sessionId && (
                        <div class="bg-gray-100 rounded-lg p-3 mb-6">
                            <p class="text-xs text-gray-500">
                                <span class="font-medium">Transaction ID:</span> <span class="font-mono">{sessionId}</span>
                            </p>
                        </div>
                    )}

                    {/* Action Buttons */}
                    <div class="space-y-3">
                        <a 
                            href="/" 
                            class="block w-full px-6 py-3 bg-brand text-white font-medium rounded-xl hover:bg-brand-dark transition-colors"
                        >
                            Return Home
                        </a>
                        <a 
                            href="/volunteer" 
                            class="block w-full px-6 py-3 text-brand bg-brand/5 hover:bg-brand/10 rounded-xl transition-colors font-medium"
                        >
                            Become a Volunteer
                        </a>
                    </div>

                    {/* Contact Info */}
                    <div class="mt-8 pt-6 border-t border-gray-200">
                        <p class="text-sm text-gray-500">
                            Questions? Contact us at{' '}
                            <a href={`mailto:${siteConfig.contact.email}`} class="text-brand hover:text-brand-dark font-medium">
                                {siteConfig.contact.email}
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<script>
    // Optional: You could add functionality here to fetch additional session details
    // from your backend if needed, but the basic success page is complete
    
    // Add any additional success page functionality here
    console.log('Ticket purchase successful!');
</script> 