---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/Button.astro';
import { siteConfig } from '../../config/site';

const reason = 'This event may have sold out, ended, or been temporarily disabled. We apologize for any inconvenience.';
---

<Layout title="Event Not Available">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center">
        <div class="absolute inset-0">
            <img 
                src={siteConfig.metadata.openGraph.image}
                alt="Event Not Available"
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/60"></div>
        </div>

        <div class="relative container mx-auto px-6 z-10">
            <div class="max-w-4xl mx-auto text-center text-white space-y-8">
                <h1 
                    class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in"
                    style="text-wrap: balance;"
                >
                    Event Not Available
                </h1>
                <p 
                    class="text-xl md:text-2xl text-gray-200 mb-12 animate-slide-up-delay-1 max-w-2xl mx-auto"
                    style="text-wrap: balance;"
                >
                    {reason}
                </p>
                <div class="animate-slide-up-delay-1">
                    <Button 
                        href="/" 
                        variant="primary"
                        class="group"
                    >
                        <span>Return to Homepage</span>
                        <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                        </svg>
                    </Button>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    .animate-fade-in {
        animation: fadeIn 0.8s ease-out;
    }

    .animate-slide-up-delay-1 {
        animation: slideUp 0.8s ease-out 0.2s both;
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>