---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/site';
import { trackEvent } from '../utils/analytics';
import TeamMemberModal from '../components/TeamMemberModal.astro';
import PartnersSection from '../components/PartnersSection.astro';
---

<Layout title="About Us">
    <section class="relative min-h-screen flex items-center justify-center">
        <div class="absolute inset-0">
            <img 
                src={siteConfig.metadata.openGraph.image}
                alt="About Shelter in a Storm"
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/60"></div>
        </div>

        <div class="relative container mx-auto px-6 z-10">
            <div class="max-w-4xl mx-auto text-center text-white space-y-8">
                <h1 
                    class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in"
                    style="text-wrap: balance;"
                >
                    Our Story
                </h1>
                <p 
                    class="text-xl md:text-2xl text-gray-200 mb-12 animate-slide-up-delay-1 max-w-2xl mx-auto"
                    style="text-wrap: balance;"
                >
                    Making a difference in Miller & Camden Counties since 2021
                </p>
            </div>
        </div>

        <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 z-10">
            <a 
                href="#content" 
                class="text-white/80 hover:text-white transition-colors duration-300 animate-float"
                aria-label="Scroll to content"
            >
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                </svg>
            </a>
        </div>
    </section>

    <div id="content" class="py-24">
        <div class="container mx-auto px-6">
            <!-- Origin Story Section -->
            <section class="max-w-4xl mx-auto mb-24">
                <div class="text-center mb-16">
                    <div class="inline-flex items-center gap-2 text-brand font-medium mb-4">
                        <span class="w-12 h-[2px] bg-brand"></span>
                        <span>Our Beginning</span>
                    </div>
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">A Simple Act of Kindness</h2>
                    <div class="prose prose-lg mx-auto">
                        <p class="text-xl text-gray-600 leading-relaxed">
                            What began as offering shelter from the cold to a single individual during a Bible study 
                            has grown into a dedicated mission to serve our Lake Ozark community. Today, we provide 
                            24/7 emergency food assistance and connect those in need with vital resources.
                        </p>
                    </div>
                </div>

                <div class="grid md:grid-cols-2 gap-12 items-center">
                    <div class="space-y-6">
                        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">Our Beginning</h3>
                            <p class="text-gray-600">
                                Founded on February 10, 2021, we started with a simple mission: to help those 
                                in immediate need. What began as a single act of compassion has blossomed into 
                                a community-wide support system.
                            </p>
                        </div>
                        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">Our Growth</h3>
                            <p class="text-gray-600">
                                Through the support of our community partners and volunteers, we've expanded our 
                                services to provide 24/7 emergency food assistance and connect those in need with 
                                essential resources throughout Miller & Camden Counties.
                            </p>
                        </div>
                    </div>
                    <div class="relative">
                        <img 
                            src={siteConfig.metadata.openGraph.image} 
                            alt="Our community impact" 
                            class="rounded-xl shadow-lg"
                        />
                        <div class="absolute inset-0 bg-brand/10 rounded-xl"></div>
                    </div>
                </div>
            </section>

            <!-- Partners Section -->
            <PartnersSection />


            <!-- Impact Section -->
            <section class="max-w-4xl mx-auto mb-24">
                <div class="text-center mb-16">
                    <div class="inline-flex items-center gap-2 text-brand font-medium mb-4">
                        <span class="w-12 h-[2px] bg-brand"></span>
                        <span>Making a Difference</span>
                    </div>
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Our Impact</h2>
                    <p class="text-xl text-gray-600">
                        Through the support of our community, we've been able to make a real difference.
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-8 text-center">
                    <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
                        <div class="text-4xl font-bold text-brand mb-2">
                            <span class="stat-number" data-target={siteConfig.shelter.impact.stats.individualsHelped}>0</span>
                            <span>+</span>
                        </div>
                        <div class="text-gray-600">Individuals Helped</div>
                    </div>
                    <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
                        <div class="text-4xl font-bold text-brand mb-2">
                            <span class="stat-number" data-target={siteConfig.shelter.impact.stats.pantryItemsTaken}>0</span>
                            <span>+</span>
                        </div>
                        <div class="text-gray-600">Pantry Items Taken</div>
                    </div>
                    <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100">
                        <div class="text-4xl font-bold text-brand mb-2">
                            $<span class="stat-number" data-target={siteConfig.shelter.impact.stats.donationsUsed}>0</span>
                        </div>
                        <div class="text-gray-600">Donated & Used</div>
                    </div>
                </div>
                <p class="text-sm text-gray-500 text-center mt-6 italic">
                    * Statistics are updated every 30 days and may not reflect current numbers.
                </p>
            </section>

            <script>
                function animateValue(element: HTMLElement, start: number, end: number, duration: number) {
                    let startTimestamp: number | null = null;
                    const step = (timestamp: number) => {
                        if (!startTimestamp) startTimestamp = timestamp;
                        const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                        const current = Math.floor(progress * (end - start) + start);
                        element.innerText = current.toLocaleString();
                        if (progress < 1) {
                            window.requestAnimationFrame(step);
                        }
                    };
                    window.requestAnimationFrame(step);
                }
            
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const element = entry.target as HTMLElement;
                            const target = parseInt(element.dataset.target || '0');
                            animateValue(element, 0, target, 2000);
                            observer.unobserve(element);
                        }
                    });
                }, {
                    threshold: 0.1
                });
            
                document.querySelectorAll('.stat-number').forEach(stat => {
                    observer.observe(stat);
                });
            </script>

            <!-- Team Section -->
            <section class="max-w-4xl mx-auto">
                <div class="text-center mb-16">
                    <div class="inline-flex items-center gap-2 text-brand font-medium mb-4">
                        <span class="w-12 h-[2px] bg-brand"></span>
                        <span>Our Leadership</span>
                    </div>
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Our Team</h2>
                    <p class="text-xl text-gray-600">
                        Meet the dedicated individuals who make our mission possible.
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-8">
                    {siteConfig.shelter.team.map((member, index) => (
                        <div 
                            class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden cursor-pointer transition-transform hover:scale-105"
                            onclick={`openTeamModal('team-modal', ${JSON.stringify(member)})`}
                        >
                            <div class="aspect-[4/3] overflow-hidden">
                                <img 
                                    src={member.image} 
                                    alt={member.name}
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <div class="p-6">
                                <h3 class="text-lg font-semibold text-gray-900 mb-1">{member.name}</h3>
                                <p class="text-brand font-medium mb-3">{member.role}</p>
                                <p class="text-gray-600 text-sm line-clamp-2">{member.bio}</p>
                                <button 
                                    class="text-brand hover:text-brand-dark mt-2 text-sm font-medium"
                                    onclick={`openTeamModal('team-modal', ${JSON.stringify(member)})`}
                                >
                                    Read More
                                </button>
                            </div>
                        </div>
                    ))}
                </div>
            </section>

            <TeamMemberModal id="team-modal" />

            <!-- Mission Section -->
            <section class="max-w-4xl mx-auto mb-24">
                <div class="text-center mb-16">
                    <div class="inline-flex items-center gap-2 text-brand font-medium mb-4">
                        <span class="w-12 h-[2px] bg-brand"></span>
                        <span>Why We Serve</span>
                    </div>
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Our Mission</h2>
                    <p class="text-xl text-gray-600 leading-relaxed">
                        {siteConfig.shelter.mission.description}
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-8">
                    {siteConfig.shelter.mission.values.map(value => (
                        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 h-full flex flex-col">
                            <div class="p-3 bg-brand/10 w-fit rounded-lg mb-4">
                                <svg class="w-6 h-6 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={value.icon}/>
                                </svg>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">{value.title}</h3>
                            <p class="text-gray-600 flex-grow">{value.description}</p>
                        </div>
                    ))}
                </div>
            </section>

            <!-- CTA Section -->
            <section class="max-w-4xl mx-auto mt-24 text-center">
                <div class="bg-brand/5 rounded-2xl p-12">
                    <h2 class="text-3xl font-bold text-gray-900 mb-4">Join Our Mission</h2>
                    <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                        Whether through volunteering, donations, or spreading awareness, 
                        there are many ways to help make a difference.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a 
                            href="/donate" 
                            class="inline-flex items-center justify-center px-6 py-3 bg-brand hover:bg-brand-dark text-white rounded-lg transition-colors"
                            onclick="trackEvent('About Page', 'Click', 'Volunteer CTA')"
                        >
                            Donate
                        </a>
                    
                    </div>
                </div>
            </section>
        </div>
    </div>
</Layout> 