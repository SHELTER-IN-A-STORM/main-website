---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/site';
---

<Layout title="Report an Issue">
    <section class="relative min-h-screen flex items-center justify-center">
        <div class="absolute inset-0">
            <img 
                src={siteConfig.metadata.openGraph.image}
                alt="Report an Issue"
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/60"></div>
        </div>

        <div class="container mx-auto px-6 relative z-10">
            <div class="max-w-4xl mx-auto text-center text-white space-y-8">
                <h1 
                    class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in"
                    style="text-wrap: balance;"
                >
                    Report an Issue
                </h1>
                <p 
                    class="text-xl md:text-2xl text-gray-200 mb-12 animate-slide-up-delay-1 max-w-2xl mx-auto"
                    style="text-wrap: balance;"
                >
                    Help us improve by reporting bugs, issues, or concerns
                </p>
            </div>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 z-10">
            <a 
                href="#content" 
                class="text-white/80 hover:text-white transition-colors duration-300 animate-float"
                aria-label="Scroll to content"
            >
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path 
                        stroke-linecap="round" 
                        stroke-linejoin="round" 
                        stroke-width="2" 
                        d="M19 14l-7 7m0 0l-7-7m7 7V3"
                    />
                </svg>
            </a>
        </div>
    </section>

    <section id="content" class="py-24">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <div class="grid md:grid-cols-2 gap-8">
                    <!-- Bug Report Form -->
                    <div class="bg-white p-6 md:p-8 rounded-xl shadow-sm border border-gray-100">
                        <div class="mb-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
                            <p class="text-blue-800 font-medium mb-2">Need Help or Assistance?</p>
                            <p class="text-blue-700 text-sm mb-3">
                                This form is for reporting technical issues with our website. If you need help or assistance, please visit our help page instead.
                            </p>
                            <a 
                                href="/get-help"
                                class="inline-block px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors"
                            >
                                Get Help â†’
                            </a>
                        </div>

                        <h2 class="text-2xl font-semibold text-gray-900 mb-6">Bug Report</h2>
                        <form 
                            action="https://formspree.io/f/xanqwbqb"
                            method="POST"
                            id="report-form"
                            class="space-y-6"
                        >
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2" for="issue-type">
                                    Issue Type
                                </label>
                                <select
                                    id="issue-type"
                                    name="Issue Type"
                                    required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand focus:border-brand"
                                >
                                    <option value="">Select an issue type</option>
                                    <option value="security">Security Concern</option>
                                    <option value="bug">Website Bug</option>
                                    <option value="content">Content Error</option>
                                    <option value="accessibility">Accessibility Issue</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>

                            <div id="security-notice" class="hidden">
                                <div class="bg-red-50 border border-red-200 rounded-lg p-4 space-y-4">
                                    <div class="flex items-center gap-3">
                                        <svg class="w-6 h-6 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                        </svg>
                                        <h3 class="text-lg font-semibold text-red-900">Security Concern</h3>
                                    </div>
                                    <p class="text-red-800">
                                        For security-related concerns, please immediately contact:
                                    </p>
                                    <div class="space-y-2">
                                        <a 
                                            href="mailto:compliance@shelterinastorm.org?subject=URGENT: Security Concern"
                                            class="block text-red-700 hover:text-red-800 font-medium"
                                        >
                                            compliance@shelterinastorm.org
                                        </a>
                                        <a 
                                            href="mailto:security@shelterinastorm.org?subject=URGENT: Security Concern"
                                            class="block text-red-700 hover:text-red-800 font-medium"
                                        >
                                            security@shelterinastorm.org
                                        </a>
                                        <a 
                                            href="mailto:ben@shelterinastorm.org?subject=URGENT: Security Concern"
                                            class="block text-red-700 hover:text-red-800 font-medium"
                                        >
                                            ben@shelterinastorm.org
                                        </a>
                                    </div>
                                    <p class="text-sm text-red-700">
                                        Please include "URGENT" in your subject line for immediate attention.
                                    </p>
                                </div>
                            </div>

                            <div id="regular-form-fields">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2" for="page-url">
                                        Page URL
                                    </label>
                                    <input
                                        type="url"
                                        id="page-url"
                                        name="Page URL"
                                        placeholder="https://"
                                        required
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand focus:border-brand"
                                    />
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2" for="description">
                                        Description
                                    </label>
                                    <textarea
                                        id="description"
                                        name="Description"
                                        rows="4"
                                        required
                                        placeholder="Please describe the issue in detail..."
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand focus:border-brand"
                                    ></textarea>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2" for="email">
                                        Your Email (optional)
                                    </label>
                                    <input
                                        type="email"
                                        id="email"
                                        name="_replyto"
                                        placeholder="For follow-up questions"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand focus:border-brand"
                                    />
                                </div>
                            </div>

                            <!-- Status messages -->
                            <div id="form-status" class="hidden">
                                <div id="success" class="hidden text-green-600 text-center py-4">
                                    Thanks for your report! We'll look into it.
                                </div>
                                <div id="error" class="hidden text-red-600 text-center py-4">
                                    Oops! There was a problem submitting your report. Please try again.
                                </div>
                            </div>

                            <button
                                type="submit"
                                class="w-full px-6 py-3 bg-brand hover:bg-brand-dark text-white font-medium rounded-lg transition-colors"
                                onclick="trackEvent('Report Page', 'Click', 'Submit Report')"
                            >
                                Submit Report
                            </button>
                        </form>
                    </div>

                    <!-- Compliance and Direct Contact -->
                    <div class="space-y-6">
                        <div class="bg-white p-6 md:p-8 rounded-xl shadow-sm border border-gray-100">
                            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Compliance Contact</h2>
                            <p class="text-gray-600 mb-6">
                                For urgent matters or compliance-related concerns, please contact our compliance team directly:
                            </p>
                            <a 
                                href="mailto:compliance@shelterinastorm.org"
                                class="inline-flex items-center gap-2 text-brand hover:text-brand-dark transition-colors"
                            >
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                </svg>
                                compliance@shelterinastorm.org
                            </a>
                        </div>

                        <div class="bg-white p-6 md:p-8 rounded-xl shadow-sm border border-gray-100">
                            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Response Time</h2>
                            <div class="space-y-4 text-gray-600">
                                <p>
                                    <strong class="text-gray-900">Bug Reports:</strong> We aim to acknowledge within 24-48 hours.
                                </p>
                                <p>
                                    <strong class="text-gray-900">Compliance Issues:</strong> We respond to compliance-related emails within 1 business day.
                                </p>
                                <p>
                                    <strong class="text-gray-900">General Inquiries:</strong> Please allow 2-3 business days for a response.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>

<script>
    declare global {
        function trackEvent(category: string, action: string, label?: string): void;
    }
    
    const form = document.getElementById("report-form") as HTMLFormElement;
    const issueType = document.getElementById("issue-type") as HTMLSelectElement;
    const securityNotice = document.getElementById("security-notice");
    const regularFormFields = document.getElementById("regular-form-fields");
    
    // Handle issue type selection
    issueType?.addEventListener("change", (e) => {
        const target = e.target as HTMLSelectElement;
        if (target.value === "security") {
            securityNotice?.classList.remove("hidden");
            regularFormFields?.classList.add("hidden");
            trackEvent('Report Page', 'Security Option', 'Selected');
        } else {
            securityNotice?.classList.add("hidden");
            regularFormFields?.classList.remove("hidden");
        }
    });
    
    async function handleSubmit(event: SubmitEvent) {
        event.preventDefault();
        const status = document.getElementById("form-status");
        const success = document.getElementById("success");
        const error = document.getElementById("error");

        if (!form || !status || !success || !error) return;

        try {
            const response = await fetch((event.target as HTMLFormElement).action, {
                method: form.method,
                body: new FormData(event.target as HTMLFormElement),
                headers: {
                    'Accept': 'application/json'
                }
            });
            
            if (response.ok) {
                form.reset();
                status.classList.remove("hidden");
                success.classList.remove("hidden");
                error.classList.add("hidden");
                trackEvent('Report Page', 'Form', 'Submission Success');
                
                setTimeout(() => {
                    status.classList.add("hidden");
                    success.classList.add("hidden");
                }, 5000);
            } else {
                const data = await response.json();
                if (Object.hasOwn(data, 'errors')) {
                    status.classList.remove("hidden");
                    error.classList.remove("hidden");
                    success.classList.add("hidden");
                    error.innerHTML = data.errors.map((error: { message: string }) => error.message).join(", ");
                } else {
                    throw new Error("Oops! There was a problem submitting your form");
                }
            }
        } catch (err) {
            status.classList.remove("hidden");
            error.classList.remove("hidden");
            success.classList.add("hidden");
            error.innerHTML = "Oops! There was a problem submitting your form";
            trackEvent('Report Page', 'Form', 'Submission Error');
        }
    }
    
    if (form) {
        form.addEventListener("submit", handleSubmit);
    }

    // Auto-fill current URL if user came from another page
    const pageUrlInput = document.getElementById('page-url') as HTMLInputElement;
    if (pageUrlInput && document.referrer) {
        pageUrlInput.value = document.referrer;
    }
</script> 