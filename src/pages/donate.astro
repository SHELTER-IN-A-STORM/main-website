---
import Layout from '../layouts/Layout.astro';
import { siteConfig } from '../config/site';
import DonationForm from '../components/donation/DonationForm.astro';
import { fade } from 'astro:transitions';
---

<Layout title="Donate">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center">
        <div class="absolute inset-0">
            <img 
                src={siteConfig.metadata.openGraph.image}
                alt="Shelter from a Storm"
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/60"></div>
        </div>

        <div class="relative container mx-auto px-6 pt-20">
            <div class="max-w-4xl mx-auto text-center text-white space-y-8">
                <h1 
                    class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in"
                    style="text-wrap: balance;"
                >
                    Support Our Mission
                </h1>
                <p 
                    class="text-xl md:text-2xl text-gray-200 mb-12 animate-slide-up-delay-1 max-w-2xl mx-auto"
                    style="text-wrap: balance;"
                >
                    Your generosity helps us provide emergency assistance and support to those in need 
                    around our community.
                </p>
                <div class="flex flex-wrap gap-6 justify-center animate-slide-up-delay-2">
                    <a
                        href="#donate-form"
                        class="group inline-flex items-center px-8 py-4 text-lg font-medium transition-all duration-300
                            bg-brand hover:bg-brand-dark text-white hover:shadow-lg rounded-lg
                            shadow-sm hover:shadow-md"
                    >
                        <span>Make a Donation</span>
                        <svg 
                            class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" 
                            fill="none" 
                            stroke="currentColor" 
                            viewBox="0 0 24 24"
                        >
                            <path 
                                stroke-linecap="round" 
                                stroke-linejoin="round" 
                                stroke-width="2" 
                                d="M17 8l4 4m0 0l-4 4m4-4H3"
                            />
                        </svg>
                    </a>
                </div>
            </div>
        </div>

        <!-- Scroll Indicator -->
    </section>

    <section id="donate-form" class="py-24">
        <div class="container mx-auto px-6">
            <div class="max-w-3xl mx-auto">
                <DonationForm donationsEnabled={true} />

                <!-- Most Needed Items Section -->
                <div class="mt-12">
                    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
                        <div class="p-8">
                            <div class="flex items-start gap-3">
                                <div class="p-2 bg-brand/10 rounded-lg">
                                    <svg class="w-5 h-5 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                            d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
                                        />
                                    </svg>
                                </div>
                                <div>
                                    <h4 class="text-sm font-medium text-gray-900">Most Needed This Month</h4>
                                    <div class="flex flex-wrap gap-4 mt-3">
                                        <div class="flex items-center gap-2">
                                            <span class="w-2 h-2 rounded-full bg-brand"></span>
                                            <span class="text-sm text-gray-600">Mac & Cheese</span>
                                        </div>
                                        <div class="flex items-center gap-2">
                                            <span class="w-2 h-2 rounded-full bg-brand"></span>
                                            <span class="text-sm text-gray-600">Body Wash</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>


<style>
    /* Active state styles for donation type buttons */
    .donation-type-btn.active {
        position: relative;
    }
    
    .donation-type-btn.active::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 2px;
        background-color: var(--color-brand);
    }
</style> 
