---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { format } from 'date-fns';
import { siteConfig } from '../../config/site';

const allEvents = await getCollection('events');
const upcomingEvents = allEvents.filter(event => event.data.status === 'upcoming')
  .sort((a, b) => a.data.date.getTime() - b.data.date.getTime());
const pastEvents = allEvents.filter(event => event.data.status === 'past')
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Events">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center">
        <div class="absolute inset-0">
            <img 
                src={siteConfig.metadata.openGraph.image}
                alt="Events"
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/60"></div>
        </div>

        <div class="container mx-auto px-6 relative z-10">
            <div class="max-w-4xl mx-auto text-center text-white space-y-8">
                <h1 
                    class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in"
                    style="text-wrap: balance;"
                >
                    Community Events
                </h1>
                <p 
                    class="text-xl md:text-2xl text-gray-200 mb-12 animate-slide-up-delay-1 max-w-2xl mx-auto"
                    style="text-wrap: balance;"
                >
                    Join us in making a difference in our community through various events and gatherings.
                </p>
            </div>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 z-10">
            <a 
                href="#events" 
                class="text-white/80 hover:text-white transition-colors duration-300 animate-float"
                aria-label="Scroll to events"
            >
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path 
                        stroke-linecap="round" 
                        stroke-linejoin="round" 
                        stroke-width="2" 
                        d="M19 14l-7 7m0 0l-7-7m7 7V3"
                    />
                </svg>
            </a>
        </div>
    </section>

    <!-- Events Content -->
    <div id="events" class="container mx-auto px-4 py-24">
        <h1 class="text-4xl font-bold mb-12">Events</h1>
        
        <!-- Upcoming Events -->
        <section class="mb-16">
          <h2 class="text-2xl font-semibold mb-6">Upcoming Events</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {upcomingEvents.map(event => (
              <a href={`/events/${event.slug}`} class="group">
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                  <img 
                    src={event.data.image} 
                    alt={event.data.title}
                    class="w-full h-48 object-cover"
                  />
                  <div class="p-6">
                    <div class="text-brand font-medium mb-2">
                      {format(event.data.date, 'MMMM d, yyyy')}
                    </div>
                    <h3 class="text-xl font-semibold mb-2 group-hover:text-brand">
                      {event.data.title}
                    </h3>
                    <p class="text-gray-600">
                      {event.data.description}
                    </p>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>

        <!-- Past Events -->
        <section>
          <h2 class="text-2xl font-semibold mb-6">Past Events</h2>
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {pastEvents.map(event => (
              <a href={`/events/${event.slug}`} class="group">
                <div class="bg-white rounded-lg shadow-md overflow-hidden opacity-75 hover:opacity-100">
                  <img 
                    src={event.data.image} 
                    alt={event.data.title}
                    class="w-full h-48 object-cover"
                  />
                  <div class="p-6">
                    <div class="text-brand font-medium mb-2">
                      {format(event.data.date, 'MMMM d, yyyy')}
                    </div>
                    <h3 class="text-xl font-semibold mb-2 group-hover:text-brand">
                      {event.data.title}
                    </h3>
                    <p class="text-gray-600">
                      {event.data.description}
                    </p>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
    </div>
</Layout> 