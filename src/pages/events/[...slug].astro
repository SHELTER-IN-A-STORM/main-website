---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { format } from 'date-fns';
import DonationForm from '../../components/donation/DonationForm.astro';
import PartnersSection from '../../components/PartnersSection.astro';
import DonorSection from '../../components/DonorSection.astro';

export async function getStaticPaths() {
  const events = await getCollection('events');
  return events.map(event => ({
    params: { slug: event.slug },
    props: { event },
  }));
}

const { event } = Astro.props;
const { Content } = await event.render();

// Get other events for the "More Events" section
const allEvents = await getCollection('events');
const moreEvents = allEvents
  .filter(e => e.slug !== event.slug)
  .sort(() => Math.random() - 0.5)
  .slice(0, 3);
---

<Layout title={event.data.title}>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center">
        <div class="absolute inset-0">
            <img 
                src={event.data.image}
                alt={event.data.title}
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/60"></div>
        </div>

        <div class="container mx-auto px-6 relative z-10">
            <div class="max-w-4xl mx-auto text-center text-white space-y-8">
                <div class="text-brand-light font-medium mb-2 text-xl">
                    {format(event.data.date, 'MMMM d, yyyy')}
                </div>
                <h1 
                    class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in"
                    style="text-wrap: balance;"
                >
                    {event.data.title}
                </h1>
                <p 
                    class="text-xl md:text-2xl text-gray-200 mb-12 animate-slide-up-delay-1 max-w-2xl mx-auto"
                    style="text-wrap: balance;"
                >
                    {event.data.description}
                </p>
                {event.data.registrationUrl && (
                    <div class="animate-slide-up-delay-2">
                        <a 
                            href={event.data.registrationUrl}
                            class="inline-block bg-brand text-white px-8 py-4 rounded-lg font-medium hover:bg-brand-dark transition-colors"
                        >
                            Register Now
                        </a>
                    </div>
                )}
            </div>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 z-10">
            <a 
                href="#content" 
                class="text-white/80 hover:text-white transition-colors duration-300 animate-float"
                aria-label="Scroll to content"
            >
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path 
                        stroke-linecap="round" 
                        stroke-linejoin="round" 
                        stroke-width="2" 
                        d="M19 14l-7 7m0 0l-7-7m7 7V3"
                    />
                </svg>
            </a>
        </div>
    </section>

    <!-- Event Content -->
    <article id="content" class="container mx-auto px-4 py-24">
        <div class="max-w-3xl mx-auto mb-24">
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="p-8">
                    <div class="flex items-center gap-4 mb-6">
                        <div class="p-3 bg-brand/10 rounded-xl">
                            <svg class="w-6 h-6 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div>
                            <div class="text-brand font-medium">
                                {format(event.data.date, 'MMMM d, yyyy')}
                            </div>
                            {event.data.time && (
                                <div class="text-gray-600">{event.data.time}</div>
                            )}
                        </div>
                    </div>

                    {event.data.location && (
                        <div class="flex items-center gap-4 mb-6">
                            <div class="p-3 bg-brand/10 rounded-xl">
                                <svg class="w-6 h-6 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </div>
                            <div class="text-gray-600">{event.data.location}</div>
                        </div>
                    )}

                    <div class="prose prose-lg max-w-none">
                        <Content />
                    </div>
                </div>
            </div>
        </div>

        <!-- Donation Section -->
        {event.data.donation?.enabled && (
            <div class="max-w-3xl mx-auto mb-24">
                <div class="text-center mb-12">
                    <h2 class="text-3xl font-bold mb-4">
                        {event.data.donation.title || "Support This Event"}
                    </h2>
                    <p class="text-gray-600 max-w-2xl mx-auto">
                        {event.data.donation.description || "Your contribution helps make this event possible and supports our mission."}
                    </p>
                </div>
                <DonationForm />
            </div>
        )}

        <!-- More Events Section -->
        {moreEvents.length > 0 && (
            <div class="max-w-7xl mx-auto">
                <h2 class="text-2xl font-semibold mb-6">More Events</h2>
                <div class="grid md:grid-cols-3 gap-8">
                    {moreEvents.map(moreEvent => (
                        <a href={`/events/${moreEvent.slug}`} class="group">
                            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                                <img 
                                    src={moreEvent.data.image} 
                                    alt={moreEvent.data.title}
                                    class="w-full h-48 object-cover"
                                />
                                <div class="p-6">
                                    <div class="text-brand font-medium mb-2">
                                        {format(moreEvent.data.date, 'MMMM d, yyyy')}
                                    </div>
                                    <h3 class="text-xl font-semibold mb-2 group-hover:text-brand">
                                        {moreEvent.data.title}
                                    </h3>
                                    <p class="text-gray-600">
                                        {moreEvent.data.description}
                                    </p>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </div>
        )}
    </article>

    <!-- Partners Section -->
    {event.data.showPartners && <PartnersSection />}
    {event.data.showPartners && <DonorSection />}
</Layout> 