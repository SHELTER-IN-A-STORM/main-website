--- 
<Layout title="Resources">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center">
        <div class="absolute inset-0">
            <img 
                src={siteConfig.metadata.openGraph.image}
                alt="Shelter from a Storm"
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/40 to-black/60"></div>
        </div>

        <div class="relative container mx-auto px-6 pt-20">
            <div class="max-w-4xl mx-auto text-center text-white space-y-8">
                <h1 
                    class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in"
                    style="text-wrap: balance;"
                >
                    Find Help & Support
                </h1>
                <p 
                    class="text-xl md:text-2xl text-gray-200 mb-12 animate-slide-up-delay-1 max-w-2xl mx-auto"
                    style="text-wrap: balance;"
                >
                    Access our directory of support services and resources available to help you or someone you know.
                </p>
                <div class="flex flex-wrap gap-6 justify-center animate-slide-up-delay-2">
                    <a
                        href="#resources"
                        class="group inline-flex items-center px-8 py-4 text-lg font-medium transition-all duration-300
                            bg-brand hover:bg-brand-dark text-white hover:shadow-lg rounded-lg
                            shadow-sm hover:shadow-md"
                    >
                        <span>View Resources</span>
                        <svg 
                            class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" 
                            fill="none" 
                            stroke="currentColor" 
                            viewBox="0 0 24 24"
                        >
                            <path 
                                stroke-linecap="round" 
                                stroke-linejoin="round" 
                                stroke-width="2" 
                                d="M17 8l4 4m0 0l-4 4m4-4H3"
                            />
                        </svg>
                    </a>
                </div>
            </div>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2">
            <a 
                href="#resources" 
                class="text-white/80 hover:text-white transition-colors duration-300 animate-float"
                aria-label="Scroll to resources"
            >
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path 
                        stroke-linecap="round" 
                        stroke-linejoin="round" 
                        stroke-width="2" 
                        d="M19 14l-7 7m0 0l-7-7m7 7V3"
                    />
                </svg>
            </a>
        </div>
    </section>

    <section id="resources" class="py-24">
        <div class="container mx-auto px-6">
            <div class="max-w-3xl mx-auto">
                <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
                    <div class="p-8 space-y-8">
                        <div class="space-y-4">
                            <label class="block text-sm font-medium text-gray-700">
                                Search Resources
                            </label>
                            <div class="flex flex-wrap gap-2 mb-4">
                                {categories.map(category => (
                                    <button
                                        class="category-filter px-3 py-1.5 rounded-full text-sm font-medium
                                            border border-gray-200 hover:border-brand transition-colors"
                                        data-category={category.id}
                                    >
                                        {category.name}
                                    </button>
                                ))}
                            </div>
                            <input 
                                id="search-input"
                                type="text" 
                                placeholder="Search by name, description, or keywords..." 
                                class="w-full p-4 rounded-lg border border-gray-200 focus:outline-none focus:ring-2 focus:ring-brand focus:border-transparent"
                            />
                        </div>

                        <div id="resources-container" class="space-y-6">
                            {resources.map(resource => (
                                <div 
                                    class="p-6 bg-gray-50 rounded-xl border border-gray-100 resource-item"
                                    data-name={resource.name.toLowerCase()}
                                    data-description={resource.description.toLowerCase()}
                                    data-keywords={resource.keywords.toLowerCase()}
                                    data-categories={resource.categories?.join(',') || ''}
                                >
                                    <h3 class="text-lg font-semibold text-gray-900 mb-2">
                                        {resource.name}
                                    </h3>
                                    <p class="text-gray-600 mb-4">
                                        {resource.description}
                                    </p>
                                    <a 
                                        href={resource.link}
                                        target="_blank"
                                        rel="noopener noreferrer" 
                                        class="inline-flex items-center text-brand hover:text-brand-dark font-medium transition-colors"
                                    >
                                        <span>Visit Website</span>
                                        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                                        </svg>
                                    </a>
                                </div>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>

<script>
    // Enhanced search functionality
    const searchInput = document.getElementById('search-input');
    const categoryFilters = document.querySelectorAll('.category-filter');
    const resourceItems = document.querySelectorAll('.resource-item');

    // Fuzzy search function
    function fuzzyMatch(str: string, pattern: string): boolean {
        pattern = pattern.toLowerCase();
        str = str.toLowerCase();
        
        let patternIdx = 0;
        let strIdx = 0;
        const patternLength = pattern.length;
        const strLength = str.length;

        while (patternIdx < patternLength && strIdx < strLength) {
            if (pattern[patternIdx] === str[strIdx]) {
                patternIdx++;
            }
            strIdx++;
        }

        return patternIdx === patternLength;
    }

    let selectedCategories = new Set();

    function filterResources() {
        const searchTerm = (document.getElementById('search-input') as HTMLInputElement)?.value.toLowerCase().trim();
        
        resourceItems.forEach(item => {
            const element = item as HTMLElement;
            const name = element.dataset.name || '';
            const description = element.dataset.description || '';
            const keywords = element.dataset.keywords || '';
            const categories = (element.dataset.categories || '').split(',');
            
            const searchableText = `${name} ${description} ${keywords}`;
            
            const matchesSearch = !searchTerm || 
                searchableText.includes(searchTerm) || 
                searchableText.split(' ').some(word => fuzzyMatch(word, searchTerm));
                
            const matchesCategories = selectedCategories.size === 0 || 
                categories.some(cat => selectedCategories.has(cat));

            if (matchesSearch && matchesCategories) {
                element.style.display = 'block';
                element.style.opacity = '1';
            } else {
                element.style.opacity = '0';
                setTimeout(() => {
                    element.style.display = 'none';
                }, 300);
            }
        });
    }

    // Event listeners
    searchInput?.addEventListener('input', filterResources);

    categoryFilters?.forEach(filter => {
        filter.addEventListener('click', (e) => {
            const target = e.currentTarget as HTMLElement;
            const category = target.dataset.category;
            
            if (category) {
                target.classList.toggle('bg-brand');
                target.classList.toggle('text-white');
                
                if (selectedCategories.has(category)) {
                    selectedCategories.delete(category);
                } else {
                    selectedCategories.add(category);
                }
                
                filterResources();
            }
        });
    });

    // Initialize
    filterResources();
</script>

<style>
    .resource-item {
        transition: all 0.3s ease;
    }
    
    .category-filter {
        transition: all 0.2s ease;
    }
    
    .category-filter:hover {
        transform: translateY(-1px);
    }
</style>