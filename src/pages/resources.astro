<script>
    // TypeScript declarations for global properties
    declare global {
        interface Window {
            selectedCategories: Set<string>;
            filterResources: () => void;
            clearSearch: () => void;
        }
    }

    // Store references globally
    window.selectedCategories = new Set();

    // Enhanced search functionality with improved matching
    const searchInput = document.getElementById('search-input');
    const categoryFilters = document.querySelectorAll('.category-filter');
    const resourceItems = document.querySelectorAll('.resource-item');
    const noResults = document.getElementById('no-results');
    const searchStatus = document.getElementById('search-status');
    const resultsCount = document.getElementById('results-count');
    const searchTermsDisplay = document.getElementById('search-terms');

    // Improved fuzzy search function with Levenshtein distance
    function levenshteinDistance(str1: string, str2: string): number {
        const track = Array(str2.length + 1).fill(null).map(() =>
            Array(str1.length + 1).fill(null));
        
        for (let i = 0; i <= str1.length; i++) track[0][i] = i;
        for (let j = 0; j <= str2.length; j++) track[j][0] = j;
        
        for (let j = 1; j <= str2.length; j++) {
            for (let i = 1; i <= str1.length; i++) {
                const indicator = str1[i - 1] === str2[j - 1] ? 0 : 1;
                track[j][i] = Math.min(
                    track[j][i - 1] + 1,
                    track[j - 1][i] + 1,
                    track[j - 1][i - 1] + indicator
                );
            }
        }
        return track[str2.length][str1.length];
    }

    // Check if a word approximately matches the search term
    function approximateMatch(word: string, searchTerm: string, threshold = 0.3): boolean {
        // Exact match
        if (word.includes(searchTerm)) return true;
        
        // Handle very short search terms differently
        if (searchTerm.length <= 3) {
            return word.includes(searchTerm);
        }

        // For longer terms, use Levenshtein distance with length-based threshold
        const distance = levenshteinDistance(word, searchTerm);
        const maxLength = Math.max(word.length, searchTerm.length);
        return distance / maxLength <= threshold;
    }

    // Make filterResources globally available
    window.filterResources = function() {
        const searchInput = document.getElementById('search-input') as HTMLInputElement;
        const searchTerms = searchInput?.value.toLowerCase().trim().split(/\s+/).filter(Boolean);
        let visibleCount = 0;
        
        resourceItems.forEach(item => {
            const element = item as HTMLElement;
            const searchableText = `${element.dataset.name} ${element.dataset.description} ${element.dataset.keywords}`.toLowerCase();
            const categories = (element.dataset.categories || '').split(',');
            
            const words = searchableText.split(/[\s,]+/);
            
            const matchesSearch = !searchTerms.length || searchTerms.some(term => 
                words.some(word => approximateMatch(word, term))
            );
                
            const matchesCategories = window.selectedCategories.size === 0 || 
                categories.some(cat => window.selectedCategories.has(cat));

            if (matchesSearch && matchesCategories) {
                element.style.display = 'block';
                element.style.opacity = '1';
                visibleCount++;
            } else {
                element.style.opacity = '0';
                setTimeout(() => {
                    element.style.display = 'none';
                }, 300);
            }
        });

        updateSearchStatus(visibleCount, searchTerms);
    }

    function updateSearchStatus(visibleCount: number, searchTerms: string[]) {
        if (!searchStatus || !resultsCount || !searchTermsDisplay || !noResults) return;

        const hasSearchTerms = searchTerms.length > 0;
        const hasCategories = window.selectedCategories.size > 0;

        if (hasSearchTerms || hasCategories) {
            searchStatus.classList.remove('hidden');
            
            let statusText = `${visibleCount} result${visibleCount !== 1 ? 's' : ''} found`;
            if (hasSearchTerms) {
                statusText += ` for "${searchTerms.join(' ')}"`;
            }
            if (hasCategories) {
                statusText += ` in selected categories`;
            }
            resultsCount.textContent = statusText;
        } else {
            searchStatus.classList.add('hidden');
        }

        if (visibleCount === 0) {
            noResults.classList.remove('hidden');
            document.getElementById('resources-container')?.classList.add('hidden');
        } else {
            noResults.classList.add('hidden');
            document.getElementById('resources-container')?.classList.remove('hidden');
        }
    }

    // Debounce function to prevent too many searches while typing
    function debounce(func: Function, wait: number) {
        let timeout: number | undefined;
        return function executedFunction(...args: any[]) {
            const later = () => {
                clearTimeout(timeout);
                func(...args);
            };
            clearTimeout(timeout);
            timeout = setTimeout(later, wait);
        };
    }

    // Event listeners
    searchInput?.addEventListener('input', debounce(window.filterResources, 250));

    categoryFilters?.forEach(filter => {
        filter.addEventListener('click', (e) => {
            const target = e.currentTarget as HTMLElement;
            const category = target.dataset.category;
            
            if (category) {
                target.classList.toggle('bg-brand');
                target.classList.toggle('text-white');
                
                if (window.selectedCategories.has(category)) {
                    window.selectedCategories.delete(category);
                } else {
                    window.selectedCategories.add(category);
                }
                
                window.filterResources();
            }
        });
    });

    // Initialize
    window.filterResources();
</script>

