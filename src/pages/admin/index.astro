---
import Layout from '../../layouts/Layout.astro';

// API configuration
const API_URL = "https://api.shopblox.gg/internal/password";
const API_KEY = "6e9d9038-468e-4dd6-a239-f99bfda30495";

let isAuthenticated = false;
---

<Layout title="Admin Dashboard">
    <div class="min-h-screen bg-gray-50">
        <!-- Login Section -->
        <div id="login-section" class="min-h-screen flex items-center justify-center p-4">
            <div class="w-full max-w-lg">
                <div class="text-center mb-8">
                    <h1 class="text-3xl font-bold text-gray-900">Admin Access</h1>
                    <p class="mt-2 text-gray-600">Enter your admin password to access the dashboard</p>
                </div>
                <form 
                    id="login-form"
                    class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100"
                >
                    <div class="space-y-4">
                        <input
                            type="password"
                            id="password"
                            class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-brand focus:ring-2 focus:ring-brand/20 outline-none transition-all"
                            placeholder="Enter password"
                            required
                        />
                        <button
                            type="submit"
                            class="w-full px-4 py-3 bg-brand text-white font-medium rounded-lg hover:bg-brand-dark transition-colors"
                        >
                            Access Admin Panel
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Admin Panel -->
        <div id="admin-panel" class="hidden">
            <!-- Spacer div to push content below fixed header -->
            <div class="h-20"></div>
            
            <!-- User Profile Header -->
            <div class="bg-brand text-white">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
                    <div class="flex items-center gap-6">
                        <div class="relative flex-shrink-0">
                            <img
                                id="profile-photo"
                                class="w-24 h-24 rounded-full object-cover border-4 border-white/20 shadow-lg"
                                src=""
                                alt="Profile photo"
                            />
                            <div class="absolute bottom-0 right-0 w-6 h-6 bg-green-400 border-4 border-brand rounded-full"></div>
                        </div>
                        <div class="flex-1 min-w-0">
                            <h1 id="profile-name" class="text-3xl font-bold text-white truncate"></h1>
                            <p id="profile-role" class="text-lg text-white/80 mt-1"></p>
                            <div id="profile-domains" class="flex flex-wrap gap-2 mt-4">
                                <!-- Domains will be added here dynamically -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Management Sections -->
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
                <h2 class="text-2xl font-bold text-gray-900 mb-8">Management Dashboard</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Analytics Section -->
                    <div id="analytics-card" class="col-span-1 bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow group">
                        <div class="p-6">
                            <div class="flex items-center gap-4">
                                <div class="p-3 bg-brand/5 rounded-xl group-hover:bg-brand/10 transition-colors">
                                    <svg class="w-8 h-8 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900">Analytics</h3>
                                    <p class="text-gray-600 mt-1">View website traffic and user behavior</p>
                                </div>
                            </div>
                            <div class="mt-6">
                                <button
                                    onclick="openAnalytics()"
                                    class="w-full px-4 py-3 text-brand bg-brand/5 hover:bg-brand/10 rounded-xl transition-colors text-sm font-medium"
                                >
                                    Open Analytics Dashboard
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Events Section -->
                    <div id="events-card" class="col-span-1 bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow group">
                        <div class="p-6">
                            <div class="flex items-center gap-4">
                                <div class="p-3 bg-brand/5 rounded-xl group-hover:bg-brand/10 transition-colors">
                                    <svg class="w-8 h-8 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900">Events</h3>
