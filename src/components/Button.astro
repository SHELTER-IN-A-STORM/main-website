---
interface Props {
    href: string;
    variant?: 'primary' | 'secondary' | 'brand';
    size?: 'sm' | 'md' | 'lg';
    class?: string;
}

const { 
    href, 
    variant = 'secondary',
    size = 'md',
    class: className = ''
} = Astro.props;

const sizes = {
    sm: 'px-4 py-2 text-sm',
    md: 'px-6 py-3 text-base',
    lg: 'px-8 py-4 text-lg'
};

const variants = {
    primary: 'text-white bg-brand hover:bg-brand-dark',
    secondary: 'text-gray-700 hover:bg-gray-50',
    brand: 'text-white bg-brand hover:bg-brand-dark'
};
---

<a
    href={href}
    class:list={[
        'inline-flex items-center font-medium rounded-lg transition-all duration-300 shadow-sm hover:shadow-md',
        sizes[size],
        variants[variant],
        className
    ]}
>
    <slot />
</a> 