---
interface Props {
    id?: string;
}

const { id = 'notification' } = Astro.props;
---

<div 
    id={id}
    class="fixed top-4 right-4 max-w-sm w-full bg-white rounded-xl shadow-lg border border-gray-100 p-4 transform translate-y-[-150%] transition-transform duration-300 z-50"
>
    <div class="flex items-start gap-3">
        <div class="p-2 bg-brand/10 rounded-lg shrink-0">
            <svg class="w-5 h-5 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
        </div>
        <div class="flex-1">
            <p id={`${id}-message`} class="text-sm text-gray-600"></p>
        </div>
        <button 
            onclick="this.closest('#notification').style.transform = 'translateY(-150%)'"
            class="p-1 hover:bg-gray-100 rounded-lg transition-colors"
        >
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>
</div>

<script define:vars={{ id }}>
    window.showNotification = function(message, duration = 10000) {
        const notification = document.getElementById(id);
        const messageEl = document.getElementById(`${id}-message`);
        
        if (notification && messageEl) {
            messageEl.textContent = message;
            notification.style.transform = 'translateY(0)';
            
            if (duration > 0) {
                setTimeout(() => {
                    notification.style.transform = 'translateY(-150%)';
                }, duration);
            }
        }
    }
</script> 