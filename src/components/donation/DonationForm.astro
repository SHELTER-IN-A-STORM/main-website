---
interface Props {
    id?: string;
    donationsEnabled?: boolean;
}

const { donationsEnabled = false } = Astro.props;

const recommendedAmounts = [
    { value: 25, label: '$25' },
    { value: 50, label: '$50' },
    { value: 75, label: '$75' },
    { value: 100, label: '$100' },
];

interface DonationButton extends HTMLButtonElement {
    dataset: {
        amount: string;
        type: 'one-time' | 'monthly';
    }
}

import Notification from '../Notification.astro';

declare global {
    interface Window {
        showNotification: (message: string) => void;
    }
}

type DonationType = 'one-time' | 'monthly';

type PaymentUrls = Record<DonationType, Record<number, string>>;
---

<div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
    {donationsEnabled ? (
        <>
            <Notification id="donation-notification" />
            <!-- Donation Type Toggle -->
            <div class="grid grid-cols-2 border-b border-gray-100">
                <button
                    class="donation-type-btn py-4 md:py-6 text-center font-medium border-r border-gray-100 transition-all duration-300 text-gray-700 hover:bg-gray-50 active"
                    data-type="one-time"
                    aria-label="Select one-time donation"
                >
                    One-time
                </button>
                <button
                    class="donation-type-btn py-4 md:py-6 text-center font-medium transition-all duration-300 text-gray-700 hover:bg-gray-50"
                    data-type="monthly"
                    aria-label="Select monthly donation"
                >
                    Monthly
                </button>
            </div>

            <!-- Donation Form -->
            <form id="donation-form" class="p-4 md:p-8 space-y-6 md:space-y-8 relative" onsubmit="return false;">
                <div id="donation-overlay" class="hidden absolute inset-0 bg-white/90 backdrop-blur-sm z-50 flex items-center justify-center rounded-2xl">
                    <div class="flex flex-col items-center gap-4">
                        <div class="animate-spin w-12 h-12">
                            <svg class="text-brand" viewBox="0 0 24 24" fill="none">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        </div>
                        <p class="text-gray-600 font-medium">Creating payment session...</p>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-4">
                        <span>Enter Amount</span>
                        <span id="donation-type-label" class="text-brand">
                            (One-time donation)
                        </span>
                    </label>
                    <div class="relative">
                        <span class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-500">$</span>
                        <input
                            type="number"
                            id="custom-amount"
                            class="w-full pl-8 pr-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-brand focus:border-brand"
                            placeholder="Enter amount"
                            min="5"
                            max="999999"
                            step="1"
                            aria-label="Enter donation amount"
                        />
                        <div class="hidden md:flex absolute right-2 top-1/2 -translate-y-1/2 gap-1 md:gap-2">
                            {recommendedAmounts.map(amount => (
                                <button
                                    type="button"
                                    class="donation-amount-btn px-2 md:px-3 py-1 text-xs md:text-sm border border-gray-200 rounded-md font-medium text-gray-600 hover:border-brand hover:text-brand transition-colors"
                                    data-amount={amount.value}
                                    aria-label={`Donate $${amount.value}`}
                                >
                                    {amount.label}
                                </button>
                            ))}
                        </div>
                    </div>
                </div>

                <!-- Email Input -->
                <div class="space-y-3 md:space-y-4">
                    <label class="block text-sm font-medium text-gray-700" for="email">
                        Email Address
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="w-full px-4 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-brand focus:border-brand"
                        placeholder="Enter your email for receipt"
                        aria-label="Enter your email address"
                    />
                </div>

                <!-- Payment Information -->
                <div class="space-y-3 md:space-y-4">
                    <label class="block text-sm font-medium text-gray-700">
                        Payment Information
                    </label>
                    <div class="bg-gray-50 rounded-xl p-4 md:p-6">
                        <p class="text-sm text-gray-600">
                            You will be redirected to our secure payment processor to complete your donation.
                        </p>
                    </div>
                </div>

                <button
                    type="button"
                    id="submit-donation"
                    class="w-full text-white bg-brand hover:bg-brand-dark font-medium py-3 md:py-4 rounded-lg transition-all duration-300 shadow-sm hover:shadow-md"
                    aria-label="Continue to payment"
                >
                    Continue to Payment
                </button>
            </form>

            <div class="px-4 md:px-8 pb-4 md:pb-8">
                <div class="p-4 md:p-6 bg-gray-50 rounded-lg border border-gray-100">
                    <div class="flex items-start gap-3">
                        <div class="p-2 bg-brand/10 rounded-lg">
                            <svg class="w-5 h-5 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                />
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-sm font-medium text-gray-900">Tax-Deductible Donation</h4>
                            <p class="text-sm text-gray-600 mt-1">
                                Your generous contribution is tax-deductible. A detailed receipt will be emailed to you 
                                for your tax records.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </>
    ) : (
        <div class="p-4 md:p-8">
            <div class="flex flex-col items-center justify-center space-y-4 md:space-y-6">
                <div class="bg-gray-50 rounded-full p-4">
                    <svg class="w-10 h-10 md:w-12 md:h-12 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                
                <div class="text-center max-w-md">
                    <h3 class="text-xl md:text-2xl font-semibold text-gray-900 mb-2 md:mb-3">Online Donations Paused</h3>
                    <p class="text-gray-600 mb-4 md:mb-6">
                        We're temporarily unable to accept online donations while we upgrade our payment system. We apologize for any inconvenience.
                    </p>
                </div>
            </div>
        </div>
    )}
</div>

<script>
    if (document.getElementById('donation-form')) {
        // Handle donation type toggle
        const donationTypeBtns = document.querySelectorAll<HTMLButtonElement>('.donation-type-btn');
        let donationType: 'one-time' | 'monthly' = 'one-time';
        const donationTypeLabel = document.getElementById('donation-type-label');
        const customAmountInput = document.getElementById('custom-amount') as HTMLInputElement;

        donationTypeBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                donationTypeBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                donationType = btn.dataset.type as 'one-time' | 'monthly';
                
                if (donationTypeLabel) {
                    donationTypeLabel.textContent = donationType === 'monthly' 
                        ? '(Monthly donation)' 
                        : '(One-time donation)';
                }
            });
        });

        // Handle donation amount selection
        const amountBtns = document.querySelectorAll<HTMLButtonElement>('.donation-amount-btn');
        let selectedAmount: number | null = null;

        amountBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                amountBtns.forEach(b => b.classList.remove('selected'));
                btn.classList.add('selected');
                selectedAmount = Number(btn.dataset.amount);
                if (customAmountInput) {
                    customAmountInput.value = selectedAmount.toString();
                }
            });
        });

        customAmountInput?.addEventListener('input', () => {
            selectedAmount = Number(customAmountInput.value);
            amountBtns.forEach(btn => btn.classList.remove('selected'));
        });

        // Handle form submission
        const submitButton = document.getElementById('submit-donation');

        submitButton?.addEventListener('click', async () => {
            // Get amount from input
            const amountInput = document.getElementById('custom-amount') as HTMLInputElement;
            const amount = Number(amountInput?.value);
            
            // Get email from input
            const emailInput = document.getElementById('email') as HTMLInputElement;
            const email = emailInput?.value;

            // Validate inputs
            if (!amount || amount < 5 || amount > 999999) {
                window.showNotification('Please enter a valid donation amount between $5 and $999,999');
                return;
            }

            if (!email) {
                window.showNotification('Please enter your email address');
                return;
            }

            // Show loading overlay
            document.getElementById('donation-overlay')?.classList.remove('hidden');

            try {
                // Make API call with minimal data
                const response = await fetch('https://api.shelterinastorm.org/api/v2/donation.js', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        amount,
                        email,
                        donationType
                    })
                });

                const data = await response.json();
                
                if (data.url) {
                    window.location.href = data.url;
                } else if (!data.success && data.message) {
                    window.showNotification(data.message);
                } else {
                    throw new Error('No payment URL received');
                }
            } catch (error) {
                console.error('Error:', error);
                window.showNotification('Failed to create payment session. Please try again.');
            } finally {
                // Hide loading overlay
                document.getElementById('donation-overlay')?.classList.add('hidden');
            }
        });
    }
</script>

<style>
    .donation-type-btn.active {
        @apply text-white bg-brand;
    }
    
    .donation-type-btn.active:hover {
        @apply bg-brand-dark;
    }
    
    .donation-amount-btn {
        @apply text-center border border-gray-200 rounded-md font-medium text-gray-600 
        transition-all duration-300;
    }

    .donation-amount-btn:hover,
    .donation-amount-btn.selected {
        @apply border-brand text-brand bg-brand/5;
    }

    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }
    input[type="number"] {
        -moz-appearance: textfield;
    }
</style>