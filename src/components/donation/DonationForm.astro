---
interface Props {
    id?: string;
}

const donationAmounts = [
    { value: 5, label: '$5' },
    { value: 25, label: '$25' },
    { value: 50, label: '$50' },
    { value: 100, label: '$100' },
];

interface DonationButton extends HTMLButtonElement {
    dataset: {
        amount: string;
        type: 'one-time' | 'monthly';
    }
}

import Notification from '../Notification.astro';

declare global {
    interface Window {
        showNotification: (message: string) => void;
    }
}

type DonationType = 'one-time' | 'monthly';

type PaymentUrls = Record<DonationType, Record<number, string>>;
---

<div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
    <Notification id="donation-notification" />
    <!-- Donation Type Toggle -->
    <div class="grid grid-cols-2 border-b border-gray-100">
        <button
            class="donation-type-btn py-6 text-center font-medium border-r border-gray-100 transition-all duration-300 text-gray-700 hover:bg-gray-50 active"
            data-type="one-time"
        >
            One-time
        </button>
        <button
            class="donation-type-btn py-6 text-center font-medium transition-all duration-300 text-gray-700 hover:bg-gray-50"
            data-type="monthly"
        >
            Monthly
        </button>
    </div>

    <!-- Donation Form -->
    <form id="donation-form" class="p-8 space-y-8 relative">
        <div id="donation-overlay" class="hidden absolute inset-0 bg-white/90 backdrop-blur-sm z-50 flex items-center justify-center rounded-2xl">
            <div class="flex flex-col items-center gap-4">
                <div class="animate-spin w-12 h-12">
                    <svg class="text-brand" viewBox="0 0 24 24" fill="none">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                </div>
                <p class="text-gray-600 font-medium">Redirecting to payment...</p>
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700 mb-4">
                <span>Select Amount</span>
                <span id="donation-type-label" class="text-brand">
                    (One-time donation)
                </span>
            </label>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {donationAmounts.map(amount => (
                    <button
                        type="button"
                        class="donation-amount-btn px-6 py-4 text-center border-2 border-gray-200 rounded-lg font-medium text-gray-600 hover:border-brand hover:text-brand transition-colors"
                        data-amount={amount.value}
                    >
                        {amount.label}
                    </button>
                ))}
            </div>
            <div class="mt-6">
                <button
                    type="button"
                    id="show-higher-amounts"
                    class="text-sm font-medium text-brand hover:text-brand-dark transition-colors inline-flex items-center gap-2"
                >
                    <span>View higher amounts</span>
                    <svg id="higher-amounts-icon" class="w-4 h-4 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </button>
                
                <div id="higher-amounts" class="hidden mt-4">
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                        {[200, 300, 400, 500, 600, 700, 800, 1000].map(amount => (
                            <button
                                type="button"
                                class="donation-amount-btn px-6 py-4 text-center border-2 border-gray-200 rounded-lg font-medium text-gray-600 hover:border-brand hover:text-brand transition-colors"
                                data-amount={amount}
                            >
                                ${amount}
                            </button>
                        ))}
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Information -->
        <div class="space-y-4">
            <label class="block text-sm font-medium text-gray-700">
                Payment Information
            </label>
            <div class="bg-gray-50 rounded-xl p-6">
                <p class="text-sm text-gray-600">
                    You will be redirected to our secure payment processor to complete your donation.
                </p>
            </div>
        </div>

        <button
            type="submit"
            class="w-full text-white bg-brand hover:bg-brand-dark font-medium py-4 rounded-lg transition-all duration-300 shadow-sm hover:shadow-md"
        >
            Continue to Payment
        </button>
    </form>

    <div class="px-8 pb-8">
        <div class="p-6 bg-gray-50 rounded-lg border border-gray-100">
            <div class="flex items-start gap-3">
                <div class="p-2 bg-brand/10 rounded-lg">
                    <svg class="w-5 h-5 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                    </svg>
                </div>
                <div>
                    <h4 class="text-sm font-medium text-gray-900">Tax-Deductible Donation</h4>
                    <p class="text-sm text-gray-600 mt-1">
                        Your generous contribution is tax-deductible. A detailed receipt will be emailed to you 
                        for your tax records.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Handle donation type toggle
    const donationTypeBtns = document.querySelectorAll<HTMLButtonElement>('.donation-type-btn');
    let donationType: 'one-time' | 'monthly' = 'one-time';
    const donationTypeLabel = document.getElementById('donation-type-label');

    donationTypeBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            donationTypeBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            donationType = btn.dataset.type as 'one-time' | 'monthly';
            
            if (donationTypeLabel) {
                donationTypeLabel.textContent = donationType === 'monthly' 
                    ? '(Monthly donation)' 
                    : '(One-time donation)';
            }
        });
    });

    // Handle higher amounts toggle
    const showHigherAmountsBtn = document.getElementById('show-higher-amounts');
    const higherAmountsSection = document.getElementById('higher-amounts');
    const higherAmountsIcon = document.getElementById('higher-amounts-icon');
    let higherAmountsVisible = false;

    showHigherAmountsBtn?.addEventListener('click', () => {
        higherAmountsVisible = !higherAmountsVisible;
        higherAmountsSection?.classList.toggle('hidden');
        if (higherAmountsIcon) {
            higherAmountsIcon.style.transform = higherAmountsVisible ? 'rotate(180deg)' : '';
        }
    });

    // Handle donation amount selection
    const amountBtns = document.querySelectorAll<HTMLButtonElement>('.donation-amount-btn');
    let selectedAmount: number | null = null;

    amountBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            amountBtns.forEach(b => b.classList.remove('selected'));
            btn.classList.add('selected');
            selectedAmount = Number(btn.dataset.amount);
        });
    });

    // Handle form submission
    const form = document.getElementById('donation-form');
    const paymentUrls: { [key: string]: { [key: number]: string } } = {
        'one-time': {
            5: 'https://buy.stripe.com/test_cN215A5da9pZdnG9AB',
            25: '',
            50: 'https://buy.stripe.com/your-50-url',
            100: 'https://buy.stripe.com/your-100-url',
        },
        'monthly': {
            5: 'https://buy.stripe.com/monthly-5-url',
            25: 'https://buy.stripe.com/monthly-25-url',
            50: 'https://buy.stripe.com/monthly-50-url',
            100: 'https://buy.stripe.com/monthly-100-url',
        }
    } as const;

    form?.addEventListener('submit', (e) => {
        e.preventDefault();
        if (!selectedAmount) {
            window.showNotification('Please select a donation amount');
            return;
        }

        // Show loading overlay
        document.getElementById('donation-overlay')?.classList.remove('hidden');
        
        // Open donation URL in new tab after short delay
        setTimeout(() => {
            const donationUrl = paymentUrls[donationType]?.[selectedAmount as number];
            if (!donationUrl) {
                window.showNotification(`This ${donationType} donation amount ($${selectedAmount}) has not been set up yet. Please contact the site administrator or choose a different amount.`);
                document.getElementById('donation-overlay')?.classList.add('hidden');
                return;
            }
            window.open(donationUrl, '_blank');
            
            // Hide loading overlay
            document.getElementById('donation-overlay')?.classList.add('hidden');
        }, 1000);
    });
</script>

<style>
    .donation-type-btn.active {
        @apply text-white bg-brand;
    }
    
    .donation-type-btn.active:hover {
        @apply bg-brand-dark;
    }
    
    .donation-amount-btn {
        @apply px-6 py-4 text-center border-2 border-gray-200 rounded-lg font-medium text-gray-600 
        transition-all duration-300;
    }

    .donation-amount-btn:hover,
    .donation-amount-btn.selected {
        @apply border-brand text-brand bg-brand/5;
    }
</style> 