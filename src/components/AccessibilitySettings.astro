<script>
const accessibilitySettings = {
    highContrast: false,
    reduceMotion: false,
    hideImages: false,
    textSize: 100,
    screenReader: false,
    readingGuide: false,
    dyslexiaSupport: false,
    colorVision: 'none',
    underlineLinks: false,
    audioNavigation: false,
    keyboardNavigation: false,
    focusIndicator: false,
    lineHeight: 'normal'
};

// Load saved settings
function loadSettings() {
    const saved = localStorage.getItem('accessibility-settings');
    if (saved) {
        const parsed = JSON.parse(saved);
        accessibilitySettings.highContrast = parsed.highContrast;
        accessibilitySettings.reduceMotion = parsed.reduceMotion;
        accessibilitySettings.hideImages = parsed.hideImages;
        accessibilitySettings.textSize = parsed.textSize || 100;
        accessibilitySettings.screenReader = parsed.screenReader || false;
        accessibilitySettings.readingGuide = parsed.readingGuide || false;
        accessibilitySettings.dyslexiaSupport = parsed.dyslexiaSupport || false;
        accessibilitySettings.colorVision = parsed.colorVision || 'none';
        accessibilitySettings.underlineLinks = parsed.underlineLinks || false;
        accessibilitySettings.audioNavigation = parsed.audioNavigation || false;
        accessibilitySettings.keyboardNavigation = parsed.keyboardNavigation || false;
        accessibilitySettings.focusIndicator = parsed.focusIndicator || false;
        accessibilitySettings.lineHeight = parsed.lineHeight || 'normal';
        applySettings();
    }
}

// Save settings
function saveSettings() {
    localStorage.setItem('accessibility-settings', JSON.stringify(accessibilitySettings));
}

// Update toggle button state
function updateToggleState(id: string, isActive: boolean) {
    const button = document.getElementById(id);
    if (button) {
        button.setAttribute('aria-checked', isActive.toString());
        const toggle = button.querySelector('span:not(.sr-only)');
        if (isActive) {
            button.classList.add('bg-brand');
            button.classList.remove('bg-gray-200');
            toggle?.classList.add('translate-x-6');
            toggle?.classList.remove('translate-x-1');
        } else {
            button.classList.remove('bg-brand');
            button.classList.add('bg-gray-200');
            toggle?.classList.remove('translate-x-6');
            toggle?.classList.add('translate-x-1');
        }
    }
}

// Apply settings to the page
function applySettings() {
    // Screen Reader Mode
    updateToggleState('screen-reader', accessibilitySettings.screenReader);
    if (accessibilitySettings.screenReader) {
        document.documentElement.classList.add('screen-reader-mode');
    } else {
        document.documentElement.classList.remove('screen-reader-mode');
    }

    // Reading Guide
    updateToggleState('reading-guide', accessibilitySettings.readingGuide);
    if (accessibilitySettings.readingGuide) {
        document.documentElement.classList.add('reading-guide');
        initReadingGuide();
    } else {
        document.documentElement.classList.remove('reading-guide');
        removeReadingGuide();
    }

    // High Contrast
    updateToggleState('high-contrast', accessibilitySettings.highContrast);
    if (accessibilitySettings.highContrast) {
        document.documentElement.classList.add('high-contrast');
    } else {
        document.documentElement.classList.remove('high-contrast');
    }

    // Reduce Motion
    updateToggleState('reduce-motion', accessibilitySettings.reduceMotion);
    if (accessibilitySettings.reduceMotion) {
        document.documentElement.classList.add('reduce-motion');
    } else {
        document.documentElement.classList.remove('reduce-motion');
    }

    // Hide Images
    updateToggleState('hide-images', accessibilitySettings.hideImages);
    if (accessibilitySettings.hideImages) {
        document.documentElement.classList.add('hide-images');
    } else {
        document.documentElement.classList.remove('hide-images');
    }

    // Text Size
    document.documentElement.style.fontSize = `${accessibilitySettings.textSize}%`;
    document.getElementById('text-size-value')!.textContent = `${accessibilitySettings.textSize}%`;

    // Dyslexia Support
    updateToggleState('dyslexia-support', accessibilitySettings.dyslexiaSupport);
    if (accessibilitySettings.dyslexiaSupport) {
        document.documentElement.classList.add('dyslexia-support');
    } else {
        document.documentElement.classList.remove('dyslexia-support');
    }

    // Color Vision
    const colorVisionSelect = document.getElementById('color-vision') as HTMLSelectElement;
    if (colorVisionSelect) {
        colorVisionSelect.value = accessibilitySettings.colorVision;
    }
    document.documentElement.classList.remove('protanopia', 'deuteranopia', 'tritanopia');
    if (accessibilitySettings.colorVision !== 'none') {
        document.documentElement.classList.add(accessibilitySettings.colorVision);
    }

    // Underline Links
    updateToggleState('underline-links', accessibilitySettings.underlineLinks);
    if (accessibilitySettings.underlineLinks) {
        document.documentElement.classList.add('underline-links');
    } else {
        document.documentElement.classList.remove('underline-links');
    }

    // Audio Navigation
    updateToggleState('audio-navigation', accessibilitySettings.audioNavigation);
    if (accessibilitySettings.audioNavigation) {
        document.documentElement.classList.add('audio-navigation');
        initAudioNavigation();
    } else {
        document.documentElement.classList.remove('audio-navigation');
        removeAudioNavigation();
    }

    // Keyboard Navigation
    updateToggleState('keyboard-navigation', accessibilitySettings.keyboardNavigation);
    if (accessibilitySettings.keyboardNavigation) {
        document.documentElement.classList.add('keyboard-navigation');
    } else {
        document.documentElement.classList.remove('keyboard-navigation');
    }

    // Focus Indicator
    updateToggleState('focus-indicator', accessibilitySettings.focusIndicator);
    if (accessibilitySettings.focusIndicator) {
        document.documentElement.classList.add('focus-indicator');
    } else {
        document.documentElement.classList.remove('focus-indicator');
    }

    // Line Height
    const lineHeightSelect = document.getElementById('line-height') as HTMLSelectElement;
    if (lineHeightSelect) {
        lineHeightSelect.value = accessibilitySettings.lineHeight;
    }
    document.documentElement.classList.remove('line-height-relaxed', 'line-height-loose');
    if (accessibilitySettings.lineHeight !== 'normal') {
        document.documentElement.classList.add(`line-height-${accessibilitySettings.lineHeight}`);
    }
}

// Initialize reading guide
function initReadingGuide() {
    if (!document.getElementById('reading-guide-line')) {
        const guide = document.createElement('div');
        guide.id = 'reading-guide-line';
        guide.className = 'fixed w-full h-8 bg-brand/10 pointer-events-none z-50 hidden';
        document.body.appendChild(guide);

        document.addEventListener('mousemove', updateReadingGuide);
    }
}

// Update reading guide position
function updateReadingGuide(e: MouseEvent) {
    const guide = document.getElementById('reading-guide-line');
    if (guide) {
        guide.style.top = `${e.clientY - 16}px`;
        guide.classList.remove('hidden');
    }
}

// Remove reading guide
function removeReadingGuide() {
    const guide = document.getElementById('reading-guide-line');
    if (guide) {
        document.removeEventListener('mousemove', updateReadingGuide);
        guide.remove();
    }
}

// Screen Reader toggle
document.getElementById('screen-reader')?.addEventListener('click', () => {
    accessibilitySettings.screenReader = !accessibilitySettings.screenReader;
    applySettings();
    saveSettings();
});

// Toggle panel
document.getElementById('accessibility-toggle')?.addEventListener('click', () => {
    const panel = document.getElementById('accessibility-panel');
    panel?.classList.toggle('hidden');
});

// Reading Guide toggle
document.getElementById('reading-guide')?.addEventListener('click', () => {
    accessibilitySettings.readingGuide = !accessibilitySettings.readingGuide;
    applySettings();
    saveSettings();
});

// High Contrast toggle
document.getElementById('high-contrast')?.addEventListener('click', () => {
    accessibilitySettings.highContrast = !accessibilitySettings.highContrast;
    applySettings();
    saveSettings();
});

// Reduce Motion toggle
document.getElementById('reduce-motion')?.addEventListener('click', () => {
    accessibilitySettings.reduceMotion = !accessibilitySettings.reduceMotion;
    applySettings();
    saveSettings();
});

// Hide Images toggle
document.getElementById('hide-images')?.addEventListener('click', () => {
    accessibilitySettings.hideImages = !accessibilitySettings.hideImages;
    applySettings();
    saveSettings();
});

// Text Size controls
document.getElementById('increase-text')?.addEventListener('click', () => {
    if (accessibilitySettings.textSize < 200) {
        accessibilitySettings.textSize += 10;
        applySettings();
        saveSettings();
    }
});

document.getElementById('decrease-text')?.addEventListener('click', () => {
    if (accessibilitySettings.textSize > 70) {
        accessibilitySettings.textSize -= 10;
        applySettings();
        saveSettings();
    }
});

// Dyslexia Support toggle
document.getElementById('dyslexia-support')?.addEventListener('click', () => {
    accessibilitySettings.dyslexiaSupport = !accessibilitySettings.dyslexiaSupport;
    applySettings();
    saveSettings();
});

// Color Vision change
document.getElementById('color-vision')?.addEventListener('change', (e) => {
    accessibilitySettings.colorVision = (e.target as HTMLSelectElement).value;
    applySettings();
    saveSettings();
});

// Underline Links toggle
document.getElementById('underline-links')?.addEventListener('click', () => {
    accessibilitySettings.underlineLinks = !accessibilitySettings.underlineLinks;
    applySettings();
    saveSettings();
});

// Audio Navigation toggle
document.getElementById('audio-navigation')?.addEventListener('click', () => {
    accessibilitySettings.audioNavigation = !accessibilitySettings.audioNavigation;
    applySettings();
    saveSettings();
});

// Keyboard Navigation toggle
document.getElementById('keyboard-navigation')?.addEventListener('click', () => {
    accessibilitySettings.keyboardNavigation = !accessibilitySettings.keyboardNavigation;
    applySettings();
    saveSettings();
});

// Focus Indicator toggle
document.getElementById('focus-indicator')?.addEventListener('click', () => {
    accessibilitySettings.focusIndicator = !accessibilitySettings.focusIndicator;
    applySettings();
    saveSettings();
});

// Line Height change
document.getElementById('line-height')?.addEventListener('change', (e) => {
    accessibilitySettings.lineHeight = (e.target as HTMLSelectElement).value;
    applySettings();
    saveSettings();
});

// Reset settings function
document.getElementById('reset-settings')?.addEventListener('click', () => {
    // Reset all settings to defaults
    accessibilitySettings.highContrast = false;
    accessibilitySettings.reduceMotion = false;
    accessibilitySettings.hideImages = false;
    accessibilitySettings.textSize = 100;
    accessibilitySettings.screenReader = false;
    accessibilitySettings.readingGuide = false;
    accessibilitySettings.dyslexiaSupport = false;
    accessibilitySettings.colorVision = 'none';
    accessibilitySettings.underlineLinks = false;
    accessibilitySettings.audioNavigation = false;
    accessibilitySettings.keyboardNavigation = false;
    accessibilitySettings.focusIndicator = false;
    accessibilitySettings.lineHeight = 'normal';
    
    // Apply and save reset settings
    applySettings();
    saveSettings();
});

// Close panel when clicking outside
document.addEventListener('click', (event) => {
    const panel = document.getElementById('accessibility-panel');
    const toggle = document.getElementById('accessibility-toggle');
    if (!panel?.contains(event.target as Node) && !toggle?.contains(event.target as Node)) {
        panel?.classList.add('hidden');
    }
});

// Initialize
document.addEventListener('DOMContentLoaded', loadSettings);

// Audio Navigation Functions
function initAudioNavigation() {
    if ('speechSynthesis' in window) {
        document.addEventListener('keydown', handleAudioNavigation);
        document.querySelectorAll('a, button, [role="button"]').forEach(el => {
            el.addEventListener('focus', speakElement);
        });
    }
}

function removeAudioNavigation() {
    document.removeEventListener('keydown', handleAudioNavigation);
    document.querySelectorAll('a, button, [role="button"]').forEach(el => {
        el.removeEventListener('focus', speakElement);
    });
}

function handleAudioNavigation(e: KeyboardEvent) {
    if (e.altKey && e.key === 'r') {
        const selection = window.getSelection();
        if (selection && selection.toString()) {
            speak(selection.toString());
        }
    }
}

function speakElement(e: Event) {
    const el = e.target as HTMLElement;
    const text = el.getAttribute('aria-label') || el.textContent;
    if (text) {
        speak(text);
    }
}

function speak(text: string) {
    if ('speechSynthesis' in window) {
        const utterance = new SpeechSynthesisUtterance(text);
        window.speechSynthesis.cancel();
        window.speechSynthesis.speak(utterance);
    }
}
</script>

