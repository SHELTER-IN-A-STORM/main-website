---
import { siteConfig } from '../config/site';

const logoUrl = "https://cdn.shelterinastorm.org/images/SHELTER_IN_A_STORM_LOGO.png";
---

<footer class="site-footer" role="contentinfo">
    <!-- Main Footer Content -->
    <div class="footer-main">
        <div class="footer-grid">
            
            <!-- Column 1: Brand & Contact -->
            <div class="footer-col footer-brand-col">
                <a href="/" class="footer-logo">
                    <img 
                        src={logoUrl}
                        alt="Shelter in a Storm" 
                        width="160"
                        height="48"
                        loading="lazy"
                    />
                </a>
                
                <p class="footer-tagline">
                    Providing emergency assistance and support to those in need in Miller and Camden Counties.
                </p>

                <div class="footer-contact-info">
                    <a href="mailto:info@shelterinastorm.org" class="footer-contact-link">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                            <rect x="2" y="4" width="20" height="16" rx="2"/>
                            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
                        </svg>
                        info@shelterinastorm.org
                    </a>
                </div>

                <div class="footer-social">
                    <a href="https://facebook.com/ShelterInAStormLOCC" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
                        <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
                        </svg>
                    </a>
                </div>
            </div>

            <!-- Column 2: Location -->
            <div class="footer-col">
                <h3 class="footer-heading">Location</h3>
                <address class="footer-address">
                    <div class="footer-address-block">
                        <p class="footer-address-label">Food Pantry (24/7)</p>
                        <p>Lake Ozark Christian Church</p>
                        <p>1560 Bagnell Dam Blvd.</p>
                        <p>Lake Ozark, MO 65049</p>
                    </div>
                </address>
                <a 
                    href="https://www.google.com/maps/dir//Lake+Ozark+Christian+Church" 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="footer-directions-link"
                >
                    Get directions →
                </a>
            </div>

            <!-- Column 3: Services -->
            <div class="footer-col">
                <h3 class="footer-heading">Services</h3>
                <ul class="footer-nav">
                    <li><a href="/services/food-pantry">Food Pantry</a></li>
                    <li><a href="/get-help">Request Assistance</a></li>
                    <li><a href="/resources">Community Resources</a></li>
                    <li><a href="/events">Events</a></li>
                </ul>
            </div>

            <!-- Column 4: About -->
            <div class="footer-col">
                <h3 class="footer-heading">About</h3>
                <ul class="footer-nav">
                    <li><a href="/about">Our Mission</a></li>
                    <li><a href="/volunteer">Volunteer</a></li>
                    <li><a href="/donate">Donate</a></li>
                    <li><a href="/report">Report an Issue</a></li>
                </ul>
            </div>

            <!-- Column 5: Partner -->
            <div class="footer-col">
                <h3 class="footer-heading">Our Partner</h3>
                <ul class="footer-nav">
                    <li><a href="https://lakeozarkdisciples.org" target="_blank" rel="noopener noreferrer">Lake Ozark Christian Church</a></li>
                </ul>
                <div class="footer-partner-note">
                    <p>Shelter in a Storm is a ministry of Lake Ozark Christian Church.</p>
                </div>
            </div>

        </div>
    </div>

    <!-- Bottom Bar -->
    <div class="footer-bottom">
        <div class="footer-bottom-inner">
            <p class="footer-copyright">
                © {new Date().getFullYear()} Lake Ozark Christian Church, Inc.
            </p>
            
            <div class="footer-legal-links">
                <a href="/legal/terms">Terms</a>
                <a href="/legal/privacy">Privacy</a>
                <a href="/legal/accessibility">Accessibility</a>
                <button onclick="window.showCookieConsent && window.showCookieConsent()" class="footer-legal-btn">
                    Cookie Settings
                </button>
            </div>

            <div class="footer-bottom-right">
                <span class="footer-nonprofit">501(c)(3) · EIN 43-1193150</span>
            </div>
        </div>
    </div>
</footer>

<style>
    .site-footer {
        --brand: #666ed8;
        --brand-dark: #5059c8;
        --brand-light: #f3f4fb;
        --text: #1a1a1a;
        --text-muted: #666666;
        --text-light: #888888;
        --bg: #ffffff;
        --bg-subtle: #f8f9fa;
        --border: #e8e8e8;
    }

    .site-footer {
        background: var(--bg);
        border-top: 1px solid var(--border);
    }

    /* ========== Main Footer ========== */
    .footer-main {
        max-width: 1280px;
        margin: 0 auto;
        padding: 3.5rem 2rem;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1.5fr 1fr 0.8fr 0.8fr 0.8fr;
        gap: 3rem;
    }

    /* ========== Brand Column ========== */
    .footer-brand-col {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .footer-logo img {
        height: 48px;
        width: auto;
        border-radius: 6px;
    }

    .footer-tagline {
        font-size: 0.9375rem;
        line-height: 1.6;
        color: var(--text-muted);
        margin: 0;
        max-width: 280px;
    }

    .footer-contact-info {
        display: flex;
        flex-direction: column;
        gap: 0.625rem;
    }

    .footer-contact-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--text-muted);
        text-decoration: none;
        transition: color 0.15s ease;
    }

    .footer-contact-link:hover {
        color: var(--brand);
    }

    .footer-contact-link svg {
        color: var(--brand);
        flex-shrink: 0;
    }

    .footer-social {
        display: flex;
        gap: 0.75rem;
        margin-top: 0.5rem;
    }

    .footer-social a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        color: var(--text-light);
        background: var(--bg-subtle);
        border-radius: 8px;
        transition: all 0.15s ease;
    }

    .footer-social a:hover {
        color: var(--brand);
        background: var(--brand-light);
    }

    /* ========== Footer Columns ========== */
    .footer-col {
        display: flex;
        flex-direction: column;
    }

    .footer-heading {
        font-size: 0.8125rem;
        font-weight: 600;
        color: var(--text);
        margin: 0 0 1.25rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
    }

    /* ========== Address ========== */
    .footer-address {
        font-style: normal;
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .footer-address-block p {
        margin: 0;
        font-size: 0.875rem;
        line-height: 1.5;
        color: var(--text-muted);
    }

    .footer-address-label {
        font-size: 0.75rem !important;
        font-weight: 500;
        color: var(--text-light) !important;
        margin-bottom: 0.25rem !important;
    }

    .footer-directions-link {
        display: inline-flex;
        align-items: center;
        margin-top: 1rem;
        font-size: 0.875rem;
        font-weight: 500;
        color: var(--brand);
        text-decoration: none;
        transition: color 0.15s ease;
    }

    .footer-directions-link:hover {
        color: var(--brand-dark);
    }

    /* ========== Navigation ========== */
    .footer-nav {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .footer-nav a {
        font-size: 0.875rem;
        color: var(--text-muted);
        text-decoration: none;
        transition: color 0.15s ease;
    }

    .footer-nav a:hover {
        color: var(--brand);
    }

    .footer-partner-note {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--border);
    }

    .footer-partner-note p {
        font-size: 0.75rem;
        color: var(--text-light);
        line-height: 1.5;
        margin: 0;
    }

    /* ========== Bottom Bar ========== */
    .footer-bottom {
        background: var(--bg-subtle);
        border-top: 1px solid var(--border);
    }

    .footer-bottom-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 1280px;
        margin: 0 auto;
        padding: 0.875rem 2rem;
        gap: 1rem;
    }

    .footer-copyright {
        font-size: 0.75rem;
        color: var(--text-light);
        margin: 0;
        flex-shrink: 0;
    }

    .footer-legal-links {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
        justify-content: center;
    }

    .footer-legal-links a,
    .footer-legal-btn {
        font-size: 0.75rem;
        color: var(--text-light);
        text-decoration: none;
        background: none;
        border: none;
        padding: 0;
        cursor: pointer;
        font-family: inherit;
        transition: color 0.15s ease;
    }

    .footer-legal-links a:hover,
    .footer-legal-btn:hover {
        color: var(--text-muted);
    }

    .footer-bottom-right {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.75rem;
        flex-shrink: 0;
    }

    .footer-nonprofit {
        color: var(--text-light);
    }

    /* ========== Responsive ========== */
    @media (max-width: 1024px) {
        .footer-main {
            padding: 3rem 2rem;
        }

        .footer-grid {
            grid-template-columns: 1.5fr 1fr 1fr;
            gap: 2.5rem;
        }

        .footer-brand-col {
            grid-column: 1;
            grid-row: 1 / 3;
        }
    }

    @media (max-width: 768px) {
        .footer-main {
            padding: 2.5rem 1.5rem;
        }

        .footer-grid {
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
        }

        .footer-brand-col {
            grid-column: 1 / -1;
            grid-row: auto;
            align-items: center;
            text-align: center;
            padding-bottom: 2rem;
            border-bottom: 1px solid var(--border);
            margin-bottom: 0.5rem;
        }

        .footer-tagline {
            max-width: 360px;
        }

        .footer-contact-info {
            align-items: center;
        }

        .footer-social {
            justify-content: center;
        }

        .footer-bottom-inner {
            flex-direction: column;
            gap: 0.75rem;
            text-align: center;
            padding: 1rem 1.5rem;
        }

        .footer-legal-links {
            gap: 0.75rem;
        }

        .footer-bottom-right {
            flex-wrap: wrap;
            justify-content: center;
            gap: 0.75rem;
        }
    }

    @media (max-width: 480px) {
        .footer-grid {
            grid-template-columns: 1fr;
            gap: 1.75rem;
        }

        .footer-col {
            text-align: center;
        }

        .footer-col .footer-heading {
            margin-bottom: 1rem;
        }

        .footer-nav {
            align-items: center;
        }

        .footer-address {
            align-items: center;
        }

        .footer-address-block {
            text-align: center;
        }

        .footer-directions-link {
            justify-content: center;
        }

        .footer-partner-note {
            text-align: center;
        }
    }
</style>
