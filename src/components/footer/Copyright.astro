---
import { siteConfig } from '../../config/site';
---

<div class="border-t border-gray-200 mt-12 pt-8">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 text-sm">
            Â© {new Date().getFullYear()} {siteConfig.name}. All rights reserved.
        </p>
        <div class="flex items-center gap-4 text-sm">
            <a 
                href={siteConfig.developer.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-600 hover:text-brand transition-colors flex items-center gap-2"
            >
                <span>Built by {siteConfig.developer.name}</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
            </a>
            <span class="text-gray-300">|</span>
            <a 
                href={siteConfig.developer.reportUrl}
                class="text-gray-600 hover:text-brand transition-colors"
            >
                Report an Issue
            </a>
        </div>
    </div>
</div> 