---
interface Props {
    id?: string;
}

const { id = 'event-alert' } = Astro.props;
---

<!-- Desktop Version -->
<div 
    id={id}
    class="fixed bottom-6 left-6 max-w-md w-full transform -translate-x-[150%] transition-all duration-500 ease-in-out z-40 hidden md:block"
>
    <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-100 hover:shadow-xl transition-shadow">
        <!-- Image Banner -->
        <div id={`${id}-image`} class="relative h-48">
            <img src="" alt="" class="w-full h-full object-cover transition-transform hover:scale-105 duration-700">
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
            <div class="absolute top-4 left-4 flex gap-2">
                <span 
                    id={`${id}-badge`}
                    class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-brand text-white shadow-lg backdrop-blur-sm"
                >
                    <span class="animate-pulse mr-1.5 h-2 w-2 rounded-full bg-white"></span>
                    Upcoming Event
                </span>
            </div>
            <button 
                onclick={`document.getElementById('${id}').style.transform = 'translateX(-150%)'`}
                class="absolute top-4 right-4 p-2 rounded-full bg-white/10 hover:bg-white/20 transition-all duration-300 backdrop-blur-sm group"
            >
                <svg class="w-4 h-4 text-white group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>

        <!-- Content -->
        <div class="p-6 space-y-4">
            <div>
                <h3 id={`${id}-title`} class="text-2xl font-bold text-gray-900 tracking-tight"></h3>
                <p id={`${id}-description`} class="mt-2 text-base text-gray-600 line-clamp-2"></p>
            </div>

            <a
                id={`${id}-action`}
                href="#"
                class="inline-flex w-full items-center justify-center px-6 py-3 bg-brand hover:bg-brand-dark text-white font-semibold rounded-2xl transition-all duration-300 hover:scale-[1.02] group shadow-lg hover:shadow-brand/25"
            >
                <span>Learn More</span>
                <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
            </a>
        </div>
    </div>
</div>

<!-- Mobile Version -->
<div 
    id={`${id}-mobile`}
    class="fixed bottom-0 left-0 right-0 transform translate-y-full transition-all duration-500 ease-in-out z-40 md:hidden"
>
    <div class="bg-white shadow-2xl border-t border-gray-100">
        <div class="relative">
            <div class="absolute left-1/2 -top-3 transform -translate-x-1/2">
                <div class="h-1 w-12 bg-gray-300 rounded-full"></div>
            </div>
        </div>
        <div class="flex items-center p-5">
            <div id={`${id}-mobile-image`} class="w-20 h-20 rounded-2xl overflow-hidden flex-shrink-0 shadow-lg">
                <img src="" alt="" class="w-full h-full object-cover transition-transform hover:scale-105 duration-700">
            </div>
            <div class="ml-4 flex-grow min-w-0">
                <span 
                    id={`${id}-mobile-badge`}
                    class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-brand text-white shadow-sm"
                >
                    <span class="animate-pulse mr-1.5 h-1.5 w-1.5 rounded-full bg-white"></span>
                    Upcoming Event
                </span>
                <h3 id={`${id}-mobile-title`} class="text-lg font-bold text-gray-900 mt-1 truncate"></h3>
                <p id={`${id}-mobile-description`} class="text-sm text-gray-600 truncate"></p>
            </div>
            <button 
                onclick={`document.getElementById('${id}-mobile').style.transform = 'translateY(100%)'`}
                class="ml-2 p-2 hover:bg-gray-100 rounded-full transition-colors"
            >
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>
        <a
            id={`${id}-mobile-action`}
            href="#"
            class="block w-full py-4 px-5 bg-brand hover:bg-brand-dark text-white text-center font-semibold transition-all duration-300 group"
        >
            <span class="inline-flex items-center">
                Learn More
                <svg class="w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
            </span>
        </a>
    </div>
</div>

<!-- Off-site Warning Alert -->
<div 
    id={`${id}-warning-modal`}
    class="fixed inset-0 bg-black/60 hidden z-50 backdrop-blur-sm transition-opacity duration-300"
>
    <div class="fixed bottom-6 right-6 max-w-sm w-full">
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-100">
            <!-- Warning Banner -->
            <div class="relative h-48 bg-gradient-to-br from-yellow-400 to-orange-500">
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="p-4 rounded-full bg-white/10 backdrop-blur-sm">
                        <svg class="w-24 h-24 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                    </div>
                </div>
                <div class="absolute top-4 left-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-white/90 text-orange-600 shadow-lg backdrop-blur-sm">
                        External Link
                    </span>
                </div>
                <button 
                    onclick={`document.getElementById('${id}-warning-modal').classList.add('hidden')`}
                    class="absolute top-4 right-4 p-2 rounded-full bg-white/10 hover:bg-white/20 transition-all duration-300 backdrop-blur-sm group"
                >
                    <svg class="w-4 h-4 text-white group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>

            <!-- Content -->
            <div class="p-6 space-y-4">
                <div>
                    <h3 class="text-2xl font-bold text-gray-900">Leaving Our Site</h3>
                    <p class="mt-2 text-base text-gray-600">You're about to visit an external website.</p>
                </div>

                <div class="p-4 bg-orange-50 rounded-2xl border border-orange-100">
                    <p class="text-sm text-orange-700">They may have different terms and privacy policies. Please note that you need to be over 18 to purchase products online. We hope to see you again soon!</p>
                </div>

                <div class="flex gap-3">
                    <button
                        onclick={`document.getElementById('${id}-warning-modal').classList.add('hidden')`}
                        class="flex-1 px-6 py-3 border border-gray-200 text-gray-700 hover:text-gray-900 hover:border-gray-300 font-semibold rounded-2xl transition-all duration-300 hover:bg-gray-50"
                    >
                        Go Back
                    </button>
                    <a
                        id={`${id}-external-link`}
                        href="#"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="flex-1 inline-flex items-center justify-center px-6 py-3 bg-orange-500 hover:bg-orange-600 text-white font-semibold rounded-2xl transition-all duration-300 hover:scale-[1.02] group shadow-lg hover:shadow-orange-500/25"
                    >
                        <span>Continue</span>
                        <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Mobile Warning Modal -->
<div 
    id={`${id}-warning-modal-mobile`}
    class="fixed inset-0 bg-black/60 hidden z-50 backdrop-blur-sm md:hidden"
>
    <div class="fixed bottom-0 left-0 right-0 bg-white rounded-t-3xl">
        <div class="relative">
            <div class="absolute left-1/2 top-3 transform -translate-x-1/2">
                <div class="h-1 w-12 bg-gray-300 rounded-full"></div>
            </div>
        </div>
        <div class="p-6 pt-8 space-y-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="p-2 rounded-full bg-orange-100">
                        <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">Leaving Our Site</h3>
                </div>
                <button 
                    onclick={`document.getElementById('${id}-warning-modal-mobile').classList.add('hidden')`}
                    class="p-2 hover:bg-gray-100 rounded-full transition-colors"
                >
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <p class="text-base text-gray-600">You're about to visit an external website.</p>
            <div class="p-4 bg-orange-50 rounded-xl border border-orange-100">
                <p class="text-sm text-orange-700">They may have different terms and privacy policies.</p>
            </div>
            <div class="flex gap-3">
                <button
                    onclick={`document.getElementById('${id}-warning-modal-mobile').classList.add('hidden')`}
                    class="flex-1 px-6 py-3.5 border border-gray-200 text-gray-700 font-semibold rounded-2xl hover:bg-gray-50"
                >
                    Go Back
                </button>
                <a
                    id={`${id}-external-link-mobile`}
                    href="#"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex-1 inline-flex items-center justify-center px-6 py-3.5 bg-orange-500 text-white font-semibold rounded-2xl group"
                >
                    <span>Continue</span>
                    <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>

<script define:vars={{ id }}>
    window.showEventAlert = function({ 
        title, 
        description, 
        image,
        badge = 'Upcoming Event',
        actionText = 'Learn More',
        actionUrl = '#',
        isExternalLink = false
    }) {
        // Desktop Elements
        const alert = document.getElementById(id);
        const titleEl = document.getElementById(`${id}-title`);
        const descriptionEl = document.getElementById(`${id}-description`);
        const badgeEl = document.getElementById(`${id}-badge`);
        const actionEl = document.getElementById(`${id}-action`);
        const imageEl = document.querySelector(`#${id}-image img`);
        const externalLinkEl = document.getElementById(`${id}-external-link`);
        
        // Mobile Elements
        const mobileAlert = document.getElementById(`${id}-mobile`);
        const mobileTitleEl = document.getElementById(`${id}-mobile-title`);
        const mobileDescriptionEl = document.getElementById(`${id}-mobile-description`);
        const mobileBadgeEl = document.getElementById(`${id}-mobile-badge`);
        const mobileActionEl = document.getElementById(`${id}-mobile-action`);
        const mobileImageEl = document.querySelector(`#${id}-mobile-image img`);
        const mobileExternalLinkEl = document.getElementById(`${id}-external-link-mobile`);
        
        // Update Desktop Version
        if (alert && titleEl && descriptionEl && badgeEl && actionEl && imageEl && externalLinkEl) {
            titleEl.textContent = title;
            descriptionEl.textContent = description;
            badgeEl.textContent = badge;
            
            const actionSpan = actionEl.querySelector('span');
            if (actionSpan) actionSpan.textContent = actionText;
            
            if (isExternalLink) {
                actionEl.addEventListener('click', (e) => {
                    e.preventDefault();
                    document.getElementById(`${id}-warning-modal`).classList.remove('hidden');
                });
                externalLinkEl.href = actionUrl;
                externalLinkEl.addEventListener('click', () => {
                    window.open(actionUrl, '_blank');
                });
            } else {
                actionEl.href = actionUrl;
            }
            
            imageEl.src = image;
            imageEl.alt = title;
            
            alert.style.transform = 'translateX(0)';
        }
        
        // Update Mobile Version
        if (mobileAlert && mobileTitleEl && mobileDescriptionEl && mobileBadgeEl && mobileActionEl && mobileImageEl && mobileExternalLinkEl) {
            mobileTitleEl.textContent = title;
            mobileDescriptionEl.textContent = description;
            mobileBadgeEl.textContent = badge;
            
            const mobileActionSpan = mobileActionEl.querySelector('span');
            if (mobileActionSpan) mobileActionSpan.textContent = actionText;
            
            if (isExternalLink) {
                mobileActionEl.addEventListener('click', (e) => {
                    e.preventDefault();
                    document.getElementById(`${id}-warning-modal-mobile`).classList.remove('hidden');
                });
                mobileExternalLinkEl.href = actionUrl;
                mobileExternalLinkEl.addEventListener('click', () => {
                    window.open(actionUrl, '_blank');
                });
            } else {
                mobileActionEl.href = actionUrl;
            }
            
            mobileImageEl.src = image;
            mobileImageEl.alt = title;
            
            mobileAlert.style.transform = 'translateY(0)';
        }
    }
</script>
